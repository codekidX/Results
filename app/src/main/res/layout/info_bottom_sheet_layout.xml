<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dev_by"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:text="Created by codekidX"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/dev_by"
        android:textSize="16sp"
        android:textColor="#6c6c6c"
        android:layout_marginTop="10dp"
        android:text="This app is open-source and doesn't have any conclusive evidence that it'll work(unless MU does not make any spelling mistakes). But, it's better to have something right? \n\n FYI, try selecting Sem-VII (REV) and check if it notifies! "
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/goto_source"
        android:text="View Source"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/disable_notification"
        android:text="Disable"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/settings"
        android:text="Settings"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>